rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }
  }
  
  match /tasks {
    allow read: if request.auth != null;
  }
  
  match /tasks/{taskId} {
		allow write: if request.auth != null && !resource.data.finished;
  }
}